[unix_http_server]
file=/tmp/supervisor.sock
chmod=0700

[inet_http_server]
port=0.0.0.0:${SUPERVISOR_WEB_PORT}
username=${SUPERVISOR_WEB_USERNAME}
password=${SUPERVISOR_WEB_PASSWORD}

[supervisorctl]
serverurl=http://127.0.0.1:${SUPERVISOR_WEB_PORT}

[supervisord]
nodaemon=true
logfile=/app/logs/supervisord.log
pidfile=/app/supervisord.pid
loglevel=debug
childlogdir=/app/logs

[rpcinterface:supervisor]
supervisor.rpcinterface_factory = supervisor.rpcinterface:make_main_rpcinterface

